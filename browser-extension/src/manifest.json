{
  "name": "Browser Copilot",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "webRequest",
    "declarativeNetRequest",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*/"
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ]
  },
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/side-panel.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/index.html"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}